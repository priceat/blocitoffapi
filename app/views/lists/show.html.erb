<h1><%= @list.title %></h1>
<h2><small><%= @list.description %></small></h2>

<% if policy(@list).update? %>
  <%= link_to "Edit List", edit_list_path, class: 'btn btn-success' %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <%= render partial: "tasks/form", collection: @tasks %>
    
  </div>
  <div class="col-md-8">
    <% if policy(Task.new).create? %>
      <%= link_to "New Task", new_list_task_path(@list), class: 'btn btn-success' %>
    <% end %>
  <% if policy(@list).destroy? %>
      <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>
    <% end %>
  </div>
</div>